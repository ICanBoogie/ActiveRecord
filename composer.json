{
	"name": "icanboogie/activerecord",
	"type": "library",
	"description": "ActiveRecord Object-relational mapping",
	"keywords": ["orm", "database", "activerecord"],
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/ActiveRecord/issues",
		"source": "https://github.com/ICanBoogie/ActiveRecord"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"ext-pdo": "*",
		"icanboogie/prototype": "2.x",
		"icanboogie/inflector": "*",
		"icanboogie/datetime": "*"
	},

	"autoload": {

		"psr-4": {

			"ICanBoogie\\ActiveRecord\\": "lib"

		},

		"classmap": [ "lib/ActiveRecord.php" ],

		"files": [ "bootstrap.php", "helpers.php" ]
	},

	"extra": {

		"icanboogie": {

			"config-constructor": {

				"activerecord_connections": "ICanBoogie\\ActiveRecord\\Hooks::synthesize_connections_config#activerecord"

			},

			"config-path": "config"
		}
	}
}
